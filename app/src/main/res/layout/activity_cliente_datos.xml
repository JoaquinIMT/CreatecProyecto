<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ClienteDatos">

    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_green"
            android:id="@+id/autoCompleteTextView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Correo" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView5"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView8"
            android:textColor="@android:color/black"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_place_pointer_green"
            android:id="@+id/autoCompleteTextView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Ubicación" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nombre_cliente"
            app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView3" android:textColor="@android:color/black"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_barcode_green"
            android:id="@+id/autoCompleteTextView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="No. Servicio CFE" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView2"
            app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView4" android:textColor="@android:color/black"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_green"
            android:id="@+id/autoCompleteTextView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Teléfono" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView3"
            app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView5" android:textColor="@android:color/black"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_paper_green"
            android:id="@+id/autoCompleteTextView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Tipo de Recibo" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView4"
            app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView6" android:textColor="@android:color/black"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_paper_green"
            android:id="@+id/autoCompleteTextView8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Tipo de Contrato" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView6"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView9"
            android:textColor="@android:color/black"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_heart_green"
            android:id="@+id/autoCompleteTextView9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Grado de Interes" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView8"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/next2"
            android:textColor="@android:color/black"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_green"
            android:id="@+id/nombre_cliente"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Nombre" app:layout_constraintTop_toBottomOf="@+id/Cliente" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView2" android:textColor="@android:color/black"/>
    <TextView
            android:text="Cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Cliente" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="30sp" android:textColor="@color/verdeDeProyecto"/>
    <Button
            android:text="Siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next2"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@android:color/transparent"
            android:layout_marginTop="8dp" android:textColor="@android:color/black"/>
</android.support.constraint.ConstraintLayout>